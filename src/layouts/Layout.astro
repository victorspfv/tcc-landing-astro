---
import "../styles/global.css";

export interface Props {
	title?: string;
}

const { title = "The Closet Clique - Your Clique, Your Closet" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="A resale and rental platform designed exclusively for high school and college students." />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Inter', sans-serif;
	}
</style>
