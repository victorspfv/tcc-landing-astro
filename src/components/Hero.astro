---
// Hero section with collage background and overlay text
import img1 from "@/assets/images/gallery/img1.webp";
import img2 from "@/assets/images/gallery/img2.webp";
import img3 from "@/assets/images/gallery/img3.webp";
import img4 from "@/assets/images/gallery/img4.webp";
import img5 from "@/assets/images/gallery/img5.webp";
import img6 from "@/assets/images/gallery/img6.webp";
import img7 from "@/assets/images/gallery/img7.webp";
import img8 from "@/assets/images/gallery/img8.webp";
import img9 from "@/assets/images/gallery/img9.webp";
import img10 from "@/assets/images/gallery/img10.webp";

const gallery = [
    img1.src, img2.src, img3.src, img4.src, img5.src, 
    img6.src, img7.src, img8.src, img9.src, img10.src
];

const gallery2 = [
    "/src/assets/images/gallery/img1.webp",
    "/src/assets/images/gallery/img2.webp",
    "/src/assets/images/gallery/img3.webp",
    "/src/assets/images/gallery/img4.webp",
    "/src/assets/images/gallery/img5.webp",
    "/src/assets/images/gallery/img6.webp",
    "/src/assets/images/gallery/img7.webp",
    "/src/assets/images/gallery/img8.webp",
    "/src/assets/images/gallery/img9.webp",
    "/src/assets/images/gallery/img10.webp",
];
---

<section class="relative min-h-[50vh] lg:min-h-[80vh] bg-gradient-to-br from-[#5CA1CB]/50 to-[#8DCAC3]/50 overflow-hidden">
    <div class="absolute inset-0 opacity-60">
        <div class="grid grid-cols-6 gap-0 h-full">
          {/* Creating a photo grid effect with placeholder images */}
          {Array.from({ length: 24 }, (_, i) => (
            <div
              class="bg-cover bg-center"
              style={{
                backgroundImage: `url(${gallery[i % gallery.length]})`,
              }}
            />
          ))}
        </div>
    </div>

      {/* Overlay */}
      <div class="absolute inset-0 bg-gradient-to-b from-transparent via-[#5CA1CB]/10 to-[#5CA1CB]/20" />

      {/* Content */}
      <div class="relative z-10 flex items-center justify-center min-h-[50vh] lg:min-h-[80vh] px-4">
        <div class="text-center">
          <h1 class="text-6xl md:text-8xl font-pacifico text-white mb-8 text-shadow">
            your clique, your closet
          </h1>
        </div>
      </div>
</section> 